<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lab_aplicacion_multimedia.Presentacion.ventana_inicio_sesion"
    android:background="@color/cardview_dark_background"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:layout_gravity="center">

    <ScrollView
        android:layout_width="384dp"
        android:layout_height="729dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="0dp"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="343dp"
                android:layout_height="112dp">

                <ImageView
                    android:id="@+id/img_Logo_App"
                    android:layout_width="171dp"
                    android:layout_height="108dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="93dp"
                    android:src="@drawable/icono_app" />
            </RelativeLayout>

            <Space
                android:id="@+id/sp_login_1"
                android:layout_width="342dp"
                android:layout_height="35dp" />

            <EditText
                android:id="@+id/txt_Nombre_Usuario_Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icono_usuario"
                android:drawablePadding="15dp"
                android:drawableTint="@color/black"
                android:ems="10"
                android:hint="Nombre usuario"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <Space
                android:id="@+id/sp_login_2"
                android:layout_width="347dp"
                android:layout_height="24dp" />

            <EditText
                android:id="@+id/txt_Password_Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icono_contrasena"
                android:drawablePadding="15dp"
                android:drawableTint="@color/black"
                android:ems="10"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <Space
                android:id="@+id/sp_login_3"
                android:layout_width="343dp"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/btn_Login"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#000000"
                android:onClick="OyenteRealizarLogin"
                android:text="Iniciar"
                android:textColor="#FFFFFF" />

            <Space
                android:id="@+id/sp_login_4"
                android:layout_width="346dp"
                android:layout_height="21dp" />

            <TextView
                android:id="@+id/lbl_Login_1"
                android:layout_width="340dp"
                android:layout_height="33dp"
                android:text="¿Nuevo usario? Registrate ahora"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_Registro_Login"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#000000"
                android:onClick="OyenteIniciarRegistro"
                android:text="Registro"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="346dp"
                android:layout_height="28dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:weightSum="12">

                <View
                    android:id="@+id/view_adorno_1"
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_weight="3"
                    android:background="#FF5722" />

                <TextView
                    android:id="@+id/lbl_Login_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="Otros métodos"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view_adorno_2"
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:layout_weight="3"
                    android:background="#FF5722" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="341dp"
                android:layout_height="38dp"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_Facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_facebook" />

                <ImageView
                    android:id="@+id/img_Google"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_google_plus" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>