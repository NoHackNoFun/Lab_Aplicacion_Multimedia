<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/cardview_dark_background"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnBorrarCuenta"
        android:layout_width="135dp"
        android:layout_height="55dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="#000000"
        android:text="Eliminar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCambiar_FechaNacimiento" />

    <Button
        android:id="@+id/btnModificarDatos"
        android:layout_width="135dp"
        android:layout_height="55dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="45dp"
        android:backgroundTint="#000000"
        android:text="Modificar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCambiar_FechaNacimiento" />

    <Button
        android:id="@+id/btnAniadirFoto"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="#000000"
        android:text="AÃ±adir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewConfiguracion" />

    <Button
        android:id="@+id/btnBuscarFoto"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#000000"
        android:text="Subir Foto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewConfiguracion" />

    <ImageView
        android:id="@+id/imageViewConfiguracion"
        android:layout_width="77dp"
        android:layout_height="61dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icono_app" />

    <EditText
        android:id="@+id/txtCambiar_email"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="25dp"
        android:layout_weight="2"
        android:drawableLeft="@drawable/icono_correo"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="Email"
        android:textColorHighlight="#FF9800"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAniadirFoto" />

    <EditText
        android:id="@+id/txtCambiar_Password"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:layout_weight="2"
        android:drawableLeft="@drawable/icono_contrasena"
        android:drawablePadding="8dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHighlight="#FF9800"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCambiar_email" />

    <EditText
        android:id="@+id/txtCambiar_Telefono"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:layout_weight="2"
        android:drawableLeft="@drawable/icono_telefono"
        android:drawablePadding="8dp"
        android:hint="Telefono"
        android:inputType="phone"
        android:textColorHighlight="#FF9800"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCambiar_Password" />

    <EditText
        android:id="@+id/txtCambiar_FechaNacimiento"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:layout_weight="2"
        android:drawableLeft="@drawable/icono_calendario"
        android:drawablePadding="8dp"
        android:hint="Fecha Nacimiento"
        android:inputType="date"
        android:textColorHighlight="#FF9800"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCambiar_Telefono" />

</androidx.constraintlayout.widget.ConstraintLayout>